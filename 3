programa
{
	
	funcao inicio()
	{

inteiro km_percorridos, dias

		escreva("quantos km você percorreu com o carro?\n")
		leia(km_percorridos)

		escreva("quantos dias você alugou o carro?\n")
		leia(dias)

real preco = (60 * dias) + (km_percorridos * 0.15)

		escreva("o preço a pagar é: ", preco, ".")
	}
}
